{
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-undef": "error",
        "no-unused-vars": "warn",
        "no-const-assign": "error",
        "no-unreachable": "warn"
    },
    "globals": {
        "WeakMap": true,
        "Promise": true,
        "BigInt": true,
        "Symbol": true,
        "Set": true,
        "WeakSet": true
    }
}