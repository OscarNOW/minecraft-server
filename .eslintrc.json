{
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-undef": "error",
        "no-const-assign": "error",
        "no-this-before-super": "error",
        "constructor-super": "error",
        "no-cond-assign": "error",
        "no-use-before-define": [
            "error",
            {
                "functions": false,
                "classes": false,
                "variables": true,
                "allowNamedExports": false
            }
        ],
        "no-eval": "error",
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-useless-computed-key": "warn",
        "no-dupe-else-if": "warn",
        "no-unneeded-ternary": "warn",
        "no-return-assign": "warn",
        "operator-assignment": "warn",
        "require-await": "warn",
        "no-var": "warn",
        "no-unused-vars": [
            "warn",
            {
                "args": "none"
            }
        ],
        "no-unreachable": "warn",
        "no-extra-boolean-cast": "warn",
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "comma-dangle": [
            "warn",
            "never"
        ],
        "quotes": [
            "warn",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "quote-props": [
            "warn",
            "as-needed"
        ]
    },
    "globals": {
        "BigInt": true,
        "Map": true,
        "Promise": true,
        "Proxy": true,
        "Reflect": true,
        "Set": true,
        "Symbol": true,
        "WeakMap": true,
        "WeakSet": true
    }
}